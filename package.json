    "polymer-webpack-loader": "^2.0.0",
    "rxjs": "^5.4.2",
    "tslint-loader": "^3.5.3",
    "zone.js": "^0.8.14",
    "autoprefixer": "^7.1.4",
    "better-console": "^1.0.0",

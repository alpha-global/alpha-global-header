{
  "name": "alpha-global-header",
  "version": "1.0.0",
  "description": "Global Header for Alpha",
  "main": "./dist/angular/umd/index.js",
  "module": "./dist/angular/umd/index.js",
  "files": [
    "dist"
  ],
  "typings": "./dist/angular/esm/index.d.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run polymer:start | npm run angular:start",
    "build": "npm run polymer:build && npm run angular:build",
    "polymer:start": "npm run polymer:watch | polymer serve",

    "polymer:watch": "webpack --config src/polymer/webpack.config.polymer.js --progress --profile --bail --watch",

    "polymer:build": "npm run polymer:build:standalone && npm run polymer:build:bundle",
    "polymer:build:standalone": "webpack --config src/polymer/webpack.config.polymer.js --progress --profile --bail",
    "polymer:build:bundle": "webpack --config src/polymer/webpack.config.polymer.bundle.js --progress --profile --bail",

    "angular:start": "ng serve",
    "angular:build": "npm run angular:build:umd && npm run angular:build:esm",
    "angular:build:umd": "webpack --config src/angular/webpack.config.umd.js --progress --profile --bail",
    "angular:build:esm": "ngc -p src/angular/tsconfig.esm.json",
    "angular:test": "ng test",
    "angular:lint": "ng lint",
    "angular:e2e": "ng e2e"
  },
  "author": "",
  "license": "ISC",

{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "alpha-global-header"
  },
  "apps": [
    {
      "root": "demo/angular/src",
      "outDir": "src/angular/dist",
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "app",

      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./demo/angular/protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "./demo/angular/src/tsconfig.app.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "./demo/angular/src/tsconfig.spec.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "./demo/angular/e2e/tsconfig.e2e.json",
      "exclude": "**/node_modules/**"
    }
  ],
  "test": {
    "karma": {
      "config": "./demo/angular/karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "css",
    "component": {}
  }
}

{
  "compileOnSave": false,
  "exclude": [
    "../../node_modules", "node_modules", "../common"
  ],
  "files" : [
    "./index.ts"
  ],
  "compilerOptions": {

    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["es2017", "dom"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "outDir": "../../angular/umd",
    "baseUrl": "",

    "paths" : {
      "alpha-global-header" : ["./index"]
    }
  }
}

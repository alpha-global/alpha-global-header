{

  "files" : [
    "./index.ts"
  ],
  "angularCompilerOptions": {
      "skipTemplateCodegen": true,
      "trace": true,
      "skipMetadataEmit" : false
  },

  "compilerOptions": {

    "target": "ES5",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "stripInternal": false,
    "types": [],
    "emitDecoratorMetadata": false,
    "inlineSources": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "",
    "rootDir": ".",
    "paths": {
      "alpha-global-header": ["./index"]
    },
    "lib": ["es2017", "dom"],
    "outDir": "../../dist/angular/esm"

  }
}
